<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/black" />
                    <size android:width="36dp" android:height="36dp" />
                </shape>
            </item>
            <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/brush_black" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/brush_black" />
            <stroke android:width="2dp" android:color="?attr/colorOutline" />
            <size android:width="32dp" android:height="32dp" />
        </shape>
    </item>
</selector>
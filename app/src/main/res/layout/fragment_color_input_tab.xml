<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hex input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hex Color"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hexColorInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="7"
                android:text="#FF0000" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- RGB Sliders -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB Values"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="16dp" />

        <!-- Red slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="R"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#FF0000"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/rgbRedSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="255"
                android:stepSize="1"
                android:value="255" />

            <TextView
                android:id="@+id/rgbRedValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="255"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

        <!-- Green slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="G"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#00FF00"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/rgbGreenSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="255"
                android:stepSize="1"
                android:value="0" />

            <TextView
                android:id="@+id/rgbGreenValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

        <!-- Blue slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#0000FF"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/rgbBlueSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="255"
                android:stepSize="1"
                android:value="0" />

            <TextView
                android:id="@+id/rgbBlueValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

        <!-- HSL Sliders -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSL Values"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="16dp" />

        <!-- Hue slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="H"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/hslHueSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="360"
                android:stepSize="1"
                android:value="0" />

            <TextView
                android:id="@+id/hslHueValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0Â°"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

        <!-- Saturation slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/hslSaturationSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                android:value="100" />

            <TextView
                android:id="@+id/hslSaturationValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

        <!-- Lightness slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:text="L"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:gravity="center" />

            <com.google.android.material.slider.Slider
                android:id="@+id/hslLightnessSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                android:value="50" />

            <TextView
                android:id="@+id/hslLightnessValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
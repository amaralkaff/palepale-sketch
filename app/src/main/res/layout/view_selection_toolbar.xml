<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface"
    android:padding="8dp">

    <!-- Selection Tools Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selection Tools"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/on_surface"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/btnRectangularSelection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_crop_free"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rectangular Selection"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnEllipticalSelection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_radio_button_unchecked"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Elliptical Selection"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnFreehandSelection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gesture"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Freehand Selection"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnMagicWand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_auto_fix_high"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Magic Wand" />

    </LinearLayout>

    <!-- Selection Operations Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnSelectAll"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnDeselect"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnInvertSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Invert"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnFeatherSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feather"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Selection Operations Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnExpandSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expand"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnContractSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contract"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnCopySelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnCutSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cut"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Selection Operations Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPasteSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paste"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnDeleteSelection"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <!-- Spacer buttons to maintain layout -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout> 
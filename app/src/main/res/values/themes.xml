<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrawingGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/purple_200</item>
    </style>
    
    <!-- Pale Pale Sketch Theme - Authentic Claude.ai Design System -->
    <style name="Theme.SocialSketch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors (Claude's CTA terracotta) -->
        <item name="colorPrimary">@color/claude_cta_500</item>
        <item name="colorPrimaryVariant">@color/claude_cta_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors (Claude's accent purple) -->
        <item name="colorSecondary">@color/claude_accent_purple</item>
        <item name="colorSecondaryVariant">@color/claude_accent_purple_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background and surfaces (Claude's warm neutrals) -->
        <item name="android:windowBackground">@color/claude_hero_500</item>
        <item name="android:colorBackground">@color/claude_hero_500</item>
        <item name="colorOnBackground">@color/claude_text_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/claude_text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/claude_hero_500</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/claude_hero_500</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/claude_text_primary</item>
        <item name="android:textColorSecondary">@color/claude_text_secondary</item>
        <item name="android:textColorTertiary">@color/claude_text_tertiary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
    </style>
    
    <!-- Drawing activity theme -->
    <style name="Theme.SocialSketch.Drawing" parent="Theme.SocialSketch">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.SocialSketch.Splash" parent="Theme.SocialSketch">
        <item name="android:windowBackground">@color/background_primary</item>
    </style>
</resources>
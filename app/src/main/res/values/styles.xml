<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Authentic Claude.ai Design System Typography -->
    
    <!-- Font definitions -->
    <string name="font_family_monospace">monospace</string>
    <string name="font_family_primary">sans-serif</string>
    <string name="font_family_secondary">sans-serif-medium</string>
    
    <!-- Display/Headline styles (Claude-inspired) -->
    <style name="TextAppearance.Claude.Display.Large">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_monospace</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.Claude.Headline.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_monospace</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.Claude.Headline.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_monospace</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.Claude.Headline.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <!-- Body text styles -->
    <style name="TextAppearance.Claude.Body.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@string/font_family_primary</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.Claude.Body.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@string/font_family_primary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.45</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <style name="TextAppearance.Claude.Body.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">@string/font_family_primary</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:fontWeight">400</item>
    </style>
    
    <!-- Label styles -->
    <style name="TextAppearance.Claude.Label.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.35</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="TextAppearance.Claude.Label.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.Claude.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="Widget.Claude.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <style name="Widget.Claude.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@string/font_family_secondary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    
    <!-- Base style aliases (required by build system) -->
    <style name="TextAppearance.Claude.Display" parent="TextAppearance.Claude.Display.Large" />
    <style name="TextAppearance.Claude.Headline" parent="TextAppearance.Claude.Headline.Large" />
    <style name="TextAppearance.Claude.Body" parent="TextAppearance.Claude.Body.Large" />
    <style name="TextAppearance.Claude.Label" parent="TextAppearance.Claude.Label.Large" />
    
    <!-- Legacy aliases for backward compatibility -->
    <style name="Widget.PalePale.Button" parent="Widget.Claude.Button" />
    <style name="Widget.PalePale.Button.Outlined" parent="Widget.Claude.Button.Outlined" />
    
</resources>